<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/start_run_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Run"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/end_run_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Run"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/start_run_button"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/show_summary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Summary"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/end_run_button"
        android:layout_margin="16dp"
        android:visibility="gone"/>

</RelativeLayout>
